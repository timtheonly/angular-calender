<% layout('../boilerplate') -%>

<div class='container' ng-controller='calendarCtrl'>
	<h1>{{title}}</h1>
	<div class='row'>
		<div class='col-md-2 sidebar '>
			<form name='addEntry'>
				<div class='form-group'>
					<label>When: <input class='form-control' ng-model='when' type='date' required/></label>
				</div>
				<div class='form-group'>
					<label>Until: <input class='form-control' ng-model='until' type='date'required/></label>
				</div>
				<div class='form-group'>
					<label>What: <textarea class='form-control' ng-model='what' required></textarea></label>
				</div>
				<div class='form-group'>
					<label>Where: <input class='form-control' type='text' ng-model='where' required/></label>
				</div>
					<button class='btn btn-primary' ng-click='insert({{loc}})'><i class='fa fa-floppy-o'></i> It's a date</button>
				
			</form>
		</div>
		<div class='col-md-9  col-md-offset-1'>
			<caldata>
			<!--this will all be replaced when caldata loads-->
				<div class='row'>
					<div class='col-lg loading'>
						<h3>Loading</h3>&nbsp;<i class='fa fa-spinner fa-spin fa-4x'></i>
					</div>
				</div>
			</caldata>
		</div>
	</div>
</div>